#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

# Runs `./git-cloc` in each child directory, and returns the aggregated
# results.

reports_dir=/tmp/cloc
rm -rf "$reports_dir"
mkdir -p "$reports_dir"

for file in *; do
  if [[ -d  "$file" ]]; then
    (cd "$file" && git cloc --report-file="${reports_dir}/${file}")
  fi
done

(cd $reports_dir && cloc --sum-reports -- *)
