#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

xrandr \
    --output DP2 --off \
    --output DP1 --off \
    --output HDMI3 --off \
    --output HDMI2 --off \
    --output HDMI1 --mode 1920x1080 --pos 1920x0 --rotate normal \
    --output eDP1 --mode 1920x1080 --pos 0x0 --rotate normal \
    --output VGA1 --mode 1440x900 --pos 3840x180 --rotate normal

al-polybar-session &
