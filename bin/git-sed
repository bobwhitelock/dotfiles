#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

main() {
    local sed_expression file_filter
    sed_expression="$1"
    file_filter="${2:-}"

    git ls-files \
        | xargs -n 1 file \
        | grep text \
        | cut -d: -f1 \
        | grep -F "$file_filter" \
        | xargs sed -i -r -e "$sed_expression"
}

main "$@"
