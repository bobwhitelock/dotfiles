# XXX Obsolete, was for Arch (using "Gnome tweaks" for same effect on Ubuntu
# now and working well).
# enable_services() {
#   run sudo systemctl enable --now udevmon
# }

header() {
  echo
  echo
  # shellcheck disable=SC2001
  echo "$@" | sed 's/^/======> /'
}

# Duplicated in `bin/sync`.
run() {
  echo
  echo '>' "$@"
  eval "$@" 2>&1 | indent
}

indent() {
  sed 's/^/       /'
}

main "$@"
