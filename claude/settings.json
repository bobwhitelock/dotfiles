      "Bash(git show :*)",
      "Bash(git status)",
      "Bash(grep :*)",
      "Bash(head :*)",
      "Bash(isort :*)",
      "Bash(ls :*)",
      "Bash(mkdir :*)",
      "Bash(mypy :*)",
      "Bash(npm test :*)",
      "Bash(pwd)",
      "Bash(pytest :*)",
      "Bash(python manage.py test :*)",
      "Bash(rg :*)",
      "Bash(tail :*)",
      "Bash(task :*)",
      "Bash(terraform plan :*)",
      "Bash(terraform providers :*)",
      "Bash(terraform show :*)",
      "Bash(touch :*)",
      "Bash(tree :*)",
      "Bash(uv :*)",
      "Bash(which :*)",
      "Bash(whoami)",
      "Create(./**)",
      "Edit(./**)",
      "Glob(*)",
      "MultiEdit(./**)",
      "Read(./**)",
