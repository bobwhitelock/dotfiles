{
  "awsAuthRefresh": "aws sso login --profile ai-dev",
  "env": {
    "AWS_PROFILE": "ai-dev"
  },
  "permissions": {
    "deny": [
      "Read(**/*.env)",
      "Read(**/*.key)",
      "Read(**/*.p12)",
      "Read(**/*.pem)",
      "Read(**/*.pfx)",
      "Read(**/*.secrets)",
      "Read(**/*env.sh)",
      "Read(**/.*env)",
      "Read(**/.aws/credentials*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/.envrc)",
      "Read(**/.netrc)",
      "Read(**/.npmrc)",
      "Read(**/.pgpass)",
      "Read(**/.pypirc)",
